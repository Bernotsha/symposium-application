<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FDFBF0"
    android:layout_height="match_parent"
    tools:context=".spot">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#BEDBE7">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="74dp"
                            android:id="@+id/spothome"
                            android:layout_height="50dp"
                            android:background="#BEDBE7"
                            android:src="@drawable/home"
                            android:textAlignment="center" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Home"
                            android:layout_marginLeft="20sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            />




                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="120dp">
                        <ImageView
                            android:id="@+id/spotbefore"
                            android:layout_width="74dp"
                            android:layout_height="50dp"
                            android:src="@drawable/before"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Previous"
                            android:layout_marginLeft="20sp"
                            android:textColor="#000000"
                            android:textStyle="bold"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="250dp">
                        <ImageView
                            android:id="@+id/spotafter"
                            android:layout_width="74dp"
                            android:layout_height="50dp"
                            android:src="@drawable/after"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:text="Next"
                            android:layout_marginLeft="20sp"/>


                    </LinearLayout>

                </RelativeLayout>


                <com.antonionicolaspina.revealtextview.RevealTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="SPOT THE ERROR"
                    android:textSize="40sp"
                    android:background="#FDFBF0"
                    app:rtv_duration="2000"/>

                <ImageView
                    android:layout_marginTop="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="211dp"
                    android:src="@drawable/spotlogo"
                    android:background="#FDFBF0"/>
                <TextView
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VENUE: IT MAIN LAB"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TIME: 10AM - 12PM"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <ImageView
                    android:id="@+id/spotphone"
                    android:layout_width="115dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30sp"
                    android:src="@drawable/phoneicon" />
                <TextView

                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="Click to call co-ordinator"/>
                <TextView
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="FACULTY CO-ORDINATORS:-"
                    android:paddingLeft="40sp"
                    android:gravity="start" />
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DR. V. MOHANRAJ"
                    android:layout_gravity="center"
                    android:layout_marginLeft="80dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MR. K. GOKULRAJ"
                    android:layout_gravity="center"
                    android:layout_marginLeft="80dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="CO-ORDINATORS:-"
                    android:paddingLeft="40sp"
                    android:gravity="start" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="YUKESH"
                    android:layout_gravity="center"
                    android:layout_marginLeft="80dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADHAVAN"
                    android:layout_gravity="center"
                    android:layout_marginLeft="80dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_marginTop="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="DESCRIPTION:-"
                    android:paddingLeft="40sp"
                    android:gravity="start" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="890dp"
                android:layout_marginLeft="50dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* It is an technical event"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* They prepare project at home"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* They should demonstrate it"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* The best one have the prize"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Implement innovative ideas"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Only one round"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="40sp"
                    android:text="WINNERS:"
                    android:gravity="start" />
                <TextView
                    android:id="@+id/spotwinner1"
                    android:layout_marginTop="10sp"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/spotwinner2"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/spotwinner3"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textStyle="normal"
                    android:layout_marginBottom="50dp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"/>








            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>