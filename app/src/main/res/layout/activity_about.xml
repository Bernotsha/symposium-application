<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BEDBE7">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="74dp"
                android:id="@+id/mehome"
                android:layout_height="50dp"
                android:background="#BEDBE7"
                android:src="@drawable/home"
                android:textAlignment="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:layout_marginLeft="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="120dp">
            <ImageView
                android:id="@+id/meregister"
                android:layout_width="74dp"
                android:layout_height="50dp"
                android:src="@drawable/register"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_marginLeft="20sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="250dp">
            <ImageView
                android:id="@+id/meevents"
                android:layout_width="74dp"
                android:layout_height="50dp"
                android:src="@drawable/neventlogo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Events"
                android:layout_marginLeft="20sp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:orientation="vertical">
            <com.tomer.fadingtextview.FadingTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                app:timeout="150"
                android:textAlignment="center"
                android:textSize="15sp"
                app:texts="@array/example"/>


        </LinearLayout>


    </RelativeLayout>




    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp">

        <yanzhikai.textpath.AsyncTextPathView
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:duration="2700"
            app:paintStrokeColor="#A7DEF7"
            app:autoStart="true"
            app:showPainter="true"
            android:background="#000000"
            app:pathStrokeColor="#ffffff"
            app:text="----PORT-2020----"
            app:textInCenter="true"
            app:textSize="18sp"
            app:repeat="RESTART"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:text="Developed By:-"
            android:textSize="25sp"/>

        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textSize="25sp"
            android:text="Department of IT"
            />
        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textSize="25sp"
            android:text="Akilandeswari (HOD)"
            />
        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textSize="25sp"
            android:text="Aldo Stalin(AP)"
            />
        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textSize="25sp"
            android:text="Bernotsha S(IT)"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginTop="20sp"
            android:textAlignment="center"
            android:text="Dhanasekar P(IT)"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginTop="20sp"
            android:textAlignment="center"
            android:text="2017-2021"
            android:textColor="#ffffff"
            />
        <yanzhikai.textpath.AsyncTextPathView
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:duration="2700"
            app:paintStrokeColor="#000000"
            app:autoStart="true"
            app:showPainter="true"
            android:background="#000000"
            app:pathStrokeColor="#ffffff"
            app:text="SONA COLLEGE OF TECHNOLOGY"
            app:textInCenter="true"
            app:textSize="18sp" />





    </LinearLayout>
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>