<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FDFBF0"
    android:layout_height="match_parent"
    tools:context=".photography">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#BEDBE7">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:layout_width="74dp"
                            android:id="@+id/photographyhome"
                            android:layout_height="50dp"
                            android:background="#BEDBE7"
                            android:src="@drawable/home"
                            android:textAlignment="center" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Home"
                            android:layout_marginLeft="20sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            />




                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="120dp">
                        <ImageView
                            android:id="@+id/photographybefore"
                            android:layout_width="74dp"
                            android:layout_height="50dp"
                            android:src="@drawable/before"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Previous"
                            android:layout_marginLeft="20sp"
                            android:textColor="#000000"
                            android:textStyle="bold"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="250dp">
                        <ImageView
                            android:id="@+id/photographyafter"
                            android:layout_width="74dp"
                            android:layout_height="50dp"
                            android:src="@drawable/after"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:text="Next"
                            android:layout_marginLeft="20sp"/>


                    </LinearLayout>

                </RelativeLayout>


                <com.antonionicolaspina.revealtextview.RevealTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="PHOTOGRAPHY"
                    android:textSize="40sp"
                    android:background="#FDFBF0"
                    app:rtv_duration="2000"/>

                <ImageView
                    android:layout_marginTop="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="211dp"
                    android:src="@drawable/photographylogo"
                    android:background="#FDFBF0"/>
                <TextView
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VENUE: GT HALL"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TIME: 10AM - 12.30PM"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>
                <ImageView
                    android:id="@+id/photographyphone"
                    android:layout_marginTop="30sp"
                    android:layout_width="115dp"
                    android:layout_height="56dp"
                    android:src="@drawable/phoneicon"
                    android:layout_gravity="center"/>
                <TextView

                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:text="Click to call co-ordinator"/>
                <TextView
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="FACULTY CO-ORDINATORS:-"
                    android:paddingLeft="40sp"
                    android:gravity="start" />
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DR. S. VASANTHI"
                    android:layout_gravity="center"
                    android:layout_marginLeft="80dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MR. S. DAVID SAMUEL AZARIYA "
                    android:layout_gravity="center"
                    android:layout_marginLeft="80dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="CO-ORDINATORS:-"
                    android:paddingLeft="40sp"
                    android:gravity="start" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RAJIV"
                    android:layout_gravity="center"
                    android:layout_marginLeft="80dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JAWAHAR"
                    android:layout_gravity="center"
                    android:layout_marginLeft="80dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_marginTop="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="DESCRIPTION:-"
                    android:paddingLeft="40sp"
                    android:gravity="start" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="880dp"
                android:layout_marginLeft="50dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* It is an technical event"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Two members per team"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Only one theme"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Summit one photo only"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* Photo will be projected at last"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* They should give explanation"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="40sp"
                    android:text="WINNERS:"
                    android:gravity="start" />
                <TextView
                    android:id="@+id/photographywinnner1"
                    android:layout_marginTop="10sp"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/photographywinner2"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/photographywinner3"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:textSize="20sp"/>








            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>